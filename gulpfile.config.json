{
	"targets": {
		"browser": {
			"compile": [{
				"input": "src/scss/tau.scss",
				"output": "docs/css/tau.css",
				"minify": false
			}, {
				"input": "src/js/app.bootstrap.js",
				"output": "docs/js/tau.js",
				"minify": false
			}],
			"bundle": [{
				"input": [
					"node_modules/whatwg-fetch/dist/fetch.umd.js",
					"node_modules/promise-polyfill/dist/polyfill.js",
					"src/polyfills/polyfills.js"
				],
				"output": "docs/js/polyfills.js",
				"minify": false
			}, {
				"input": [
					"node_modules/angular/angular.js",
					"node_modules/angular-messages/angular-messages.js",
					"node_modules/angular-sanitize/angular-sanitize.js",

					"node_modules/gsap/src/uncompressed/easing/EasePack.js",
					"node_modules/gsap/src/uncompressed/TweenMax.js",
					"node_modules/three/build/three.js",
					"node_modules/three/examples/js/vr/WebVR.js",
					"node_modules/three/examples/js/modifiers/SubdivisionModifier.js",
					"node_modules/three/examples/js/loaders/OBJLoader.js",
					"node_modules/three/examples/js/controls/OrbitControls.js",
					"node_modules/three/examples/js/loaders/EquirectangularToCubeGenerator.js",
					"node_modules/three/examples/js/loaders/RGBELoader.js",
					"node_modules/three/examples/js/utils/BufferGeometryUtils.js",

					"src/js/math/SimplexNoise.js",
					"node_modules/three/examples/js/postprocessing/EffectComposer.js",
					"node_modules/three/examples/js/postprocessing/RenderPass.js",
					"node_modules/three/examples/js/postprocessing/ShaderPass.js",
					"node_modules/three/examples/js/postprocessing/SAOPass.js",
					"node_modules/three/examples/js/postprocessing/SSAOPass.js",
					"node_modules/three/examples/js/shaders/CopyShader.js",
					"node_modules/three/examples/js/shaders/SAOShader.js",
					"node_modules/three/examples/js/shaders/SSAOShader.js",
					"node_modules/three/examples/js/shaders/DepthLimitedBlurShader.js",
					"node_modules/three/examples/js/shaders/UnpackDepthRGBAShader.js",
					"node_modules/three/examples/js/postprocessing/SSAARenderPass.js",
					"node_modules/three/examples/js/postprocessing/TAARenderPass.js"
				],
				"output": "docs/js/vendors.js",
				"minify": false
			}]
		}
	},
	"options": {
		"tfs": false,
		"server": {
			"src": "./docs",
			"path": "/tau/",
			"port": 7777
		}
	}
}
